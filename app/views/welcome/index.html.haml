/ Header
%header
  .container
    .intro-text
      .intro-lead-in Welcome to Productivity
      .intro-heading Ready to Get It Done?
      = link_to "Sign Up", new_user_registration_path, class: 'btn btn-xl'
      = link_to "Sign In", new_user_session_path, class: 'btn btn-xl'
/ Services Section
%section#services
  .container
    .row
      .col-lg-12.text-center
        %h2.section-heading Get It Done
    .row.text-center
      .col-md-4
        %span.fa-stack.fa-4x
          %i.fa.fa-circle.fa-stack-2x.text-primary
          %i.fa.fa-shopping-cart.fa-stack-1x.fa-inverse
        %h4.service-heading Create To Do Lists
        %p.text-muted 
      .col-md-4
        %span.fa-stack.fa-4x
          %i.fa.fa-circle.fa-stack-2x.text-primary
          %i.fa.fa-laptop.fa-stack-1x.fa-inverse
        %h4.service-heading Automatically Delete Unfinished Tasks
        %p.text-muted
      .col-md-4
        %span.fa-stack.fa-4x
          %i.fa.fa-circle.fa-stack-2x.text-primary
          %i.fa.fa-lock.fa-stack-1x.fa-inverse
        %h4.service-heading View Completed Items
        %p.text-muted 
